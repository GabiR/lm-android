<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/length"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:hint="Lungime"
            android:inputType="numberDecimal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"

            android:textSize="14sp"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:ellipsize="none"
            android:gravity="end|center_vertical"

            android:lines="1"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingStart="4dp"
            android:paddingTop="8dp"
            android:text="metri"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/width"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="0.7"
            android:hint="Lățime"
            android:inputType="numberDecimal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp"

            />

        <TextView
            android:id="@+id/lat_metri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:ellipsize="none"
            android:gravity="end|center_vertical"

            android:lines="1"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"

            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingStart="4dp"
            android:paddingTop="8dp"
            android:text="metri"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/per_pack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="0.7"
            android:hint="Cantitate pachet"
            android:inputType="numberDecimal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp"

            />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:ellipsize="none"
            android:gravity="end|center_vertical"

            android:lines="1"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"

            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingStart="4dp"
            android:paddingTop="8dp"
            android:text="@string/surface"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <EditText
            android:id="@+id/no_hands"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="0.7"
            android:hint="Număr mâini"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp"

            />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:ellipsize="none"
            android:gravity="end|center_vertical"

            android:lines="1"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"

            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingStart="4dp"
            android:paddingTop="8dp"
            android:text="mâini"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <com.rey.material.widget.Spinner
        android:id="@+id/mode"
        style="@style/Material.Widget.Spinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:dropDownWidth="wrap_content"
        android:singleLine="true"
        app:rd_style="@style/Material.Drawable.Ripple.Wave"
        app:spn_arrowColor="@color/colorPrimary"
        app:spn_arrowSize="5dp"
        app:spn_dividerHeight="0dp"
        app:spn_dividerPadding="0dp"
        app:spn_label="Modalitate"
        app:spn_labelEnable="true"
        app:spn_labelPadding="4dp"
        app:spn_labelTextColor="@color/grey"
        app:spn_labelTextSize="12sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="- pachete"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>