<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_view_forgot">



    <LinearLayout
        android:id="@+id/bg_white"
        android:layout_alignTop="@+id/lock"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="40dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/titluPopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parolă uitată"
            android:textColor="@color/lightGreen"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/contentPopup"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduceţi adresa şi vă vom trimite un mail cu instrucţiuni pentru resetare."
            android:textColor="@color/light_grey"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/email"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresa de mail..."
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/unpressedblack"
            android:background="@drawable/bg_edt_rounded"
            android:textColorHint="@color/light_grey"/>

        <TextView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resetează"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/bg_reset_btn"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/inchide_popup"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Închide"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/bg_reset_btn"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lock_icon"/>


</RelativeLayout>