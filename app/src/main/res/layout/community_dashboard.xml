<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/white">


    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/back_arrow"
            android:visibility="gone"
            />

        <ImageView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_ff"
            android:adjustViewBounds="true"/>

        <TextView
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facem-FacemFacem-FacemFacem-FacemFacem-FacemFacem-Facem"
            android:singleLine="true"
            android:layout_marginRight="70dp"
            android:textColor="@color/white"
            android:textSize="18sp"/>

     <!--   <ImageView
            android:id="@+id/logout"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="16dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:src="@drawable/logout_icon"
            android:onClick="logoutClicked"/>-->
      <RelativeLayout
          android:id="@+id/logout"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:onClick="logoutClicked"
          android:layout_gravity="right"
          android:paddingTop="5dp"
          android:paddingRight="16dp"
          android:paddingBottom="5dp"
          android:clickable="true">
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/logout"
              android:layout_above="@+id/text"
              />
          <TextView
              android:id="@+id/text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:textColor="@color/white"
              android:text="Logout"
              android:lines="1"
              android:gravity="center"
              android:textSize="10sp"/>
      </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/content_frame_community"
        android:layout_weight="0.999"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@+id/toolbar"
        >

        </FrameLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/bottom_shadow"
        android:layout_below="@+id/toolbar"/>-->
    <include layout="@layout/toolbar_shadow"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/top_shadow"
       android:layout_above="@+id/bottom_bar" />
    <LinearLayout
        android:layout_weight="0.001"
        android:weightSum="1"
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_bg_gray">

        <LinearLayout
            android:tag="home"
            android:paddingLeft="10dp"
            android:id="@+id/home_button"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="0.20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/home_green"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="@dimen/menu_button_text_padding"
                android:textColor="@color/colorPrimary"
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:tag="projects"
            android:id="@+id/projects_button"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="0.20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/projects_gray"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="@dimen/menu_button_text_padding"
                android:textColor="@color/unpressedblack"
                android:text="Proiecte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:tag="discussions"
            android:id="@+id/discussions_button"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="0.20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/discussions_gray"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="@dimen/menu_button_text_padding"
                android:textColor="@color/unpressedblack"
                android:text="DiscuÈ›ii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:tag="contests"
            android:id="@+id/contests_button"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="0.20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/contests_gray"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="@dimen/menu_button_text_padding"
                android:textColor="@color/unpressedblack"
                android:text="Concursuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:tag="shop"
            android:paddingRight="10dp"
            android:id="@+id/shop_button"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="0.20"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:src="@drawable/shop_icon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:adjustViewBounds="true"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>