<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/project_background"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="25dp">
    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="220dp"
        android:src="@drawable/temp_pic"/>
    <View
        android:id="@+id/helper"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/share_button1"
        android:layout_alignRight="@+id/share_button1"
        android:layout_alignStart="@+id/share_button1"
        android:layout_alignEnd="@+id/share_button1"
        android:layout_below="@+id/main_image"/>
    <TextView

        android:id="@+id/project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Vopsire camera"
        android:layout_alignRight="@+id/share_button1"
        android:layout_alignStart="@+id/share_button1"
        android:layout_alignEnd="@+id/share_button1"
        android:layout_alignLeft="@+id/share_button1"
        android:textSize="18sp"
        android:layout_below="@id/helper"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    <com.mikhaellopez.circularimageview.CircularImageView

        android:id="@+id/avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@id/helper"
       android:layout_alignLeft="@id/helper"
        android:src="@drawable/unknown_default"
        android:layout_alignBottom="@id/helper"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="realizat de DjDeeNo"
        android:textColor="@color/username_gray"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_alignEnd="@id/helper"
        android:layout_alignRight="@id/helper"
        android:layout_toEndOf="@+id/avatar"
        android:layout_alignBottom="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:layout_marginBottom="4dp"
        />
    <include layout="@layout/divider"
        android:layout_below="@+id/user_name"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent" />
    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:id="@+id/share_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_name"
        android:gravity="center"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimary"
        android:text="Distribuie acest proiect"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/share_button1"
        android:layout_alignStart="@+id/share_button1"
        android:layout_alignEnd="@id/share_button1"
        android:layout_alignRight="@+id/share_button1"
        android:layout_below="@id/share_button1">
        <TextView
            android:id="@+id/like_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/like_n" />
        <TextView
            android:id="@+id/comm_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/comm_n" />
        <TextView
            android:id="@+id/viz_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/viz_n" />
    </LinearLayout>
</RelativeLayout>